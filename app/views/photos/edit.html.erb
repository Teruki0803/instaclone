

<section class="section">
 <div class="container">
  <div class="columns is-centered">
    <div class="column is-6">
      <%= form_for @photo do |f| %>
      <h1>編集</h1>
      
        <!--エラーメッセージの表示-->
      <% if @photo.errors.any? %>
         <div class="notification is-danger">
            <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
              <ul>
                <% @photo.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
              </ul>
          </div>
      <% end %>
      
        <div class="field">
          <%= f.label :title, "タイトル", class: "label" %>
          <%= f.text_field :title, class: "input" %>
        </div>

        <div class="field">
          <%= f.label :image, "写真", class: "label" %>
          <%= f.attachment_field :image, class: "input" %>
        </div>

        <div class="field">
          <%= f.label :body, "詳細", class: "label" %>
          <%= f.text_area :body, class: "textarea" %>
        </div>

        <%= f.submit '投稿', class: "button is-success" %>
      <% end %>
    </div>
  </div>
</div>
</section>