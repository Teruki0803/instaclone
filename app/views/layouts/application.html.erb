<!DOCTYPE html>
<html>
  <head>
    <title>Cloneinsta</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.min.css" integrity="sha256-UzFD2WYH2U1dQpKDjjZK72VtPeWP50NoJjd26rnAdUI=" crossorigin="anonymous" />
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if flash[:notice] %>
    <div class="notification">
      <p class="notice"><%= notice %></p>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="notification">
      <p class="alert"><%= alert %></p>
    </div>
  <% end %>
  
    <nav class="navbar navbar-light bg-light">
    <div class="navbar-brand">
      <%= link_to  root_path, class: "navbar-brand" do %>
        <h1 class="title" style="font-family: cursive;">instaclone</h1>
      <% end %>
      <div class="navbar-burger burger" data-target="navbarExampleTransparentExample">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>
    
      <% if user_signed_in? %>
       <div class="collapse navbar-collapse justify-content-around" id="navbarNav4">
           <ul class="list-inline navbar navbar-right bg-right">
              <li class="nav-item">
                <%= link_to "新規投稿" ,new_photo_path,class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "マイページ" , user_path(current_user) ,class: "nav-link"%>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト" , destroy_user_session_path, method: :delete ,class: "nav-link"%>
              </li>
             <li class="nav-item">
              <form class="form-inline">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
              </form>
            </li>
          </ul>
      <% else %>
         <ul class="list-inline navbar navbar-right bg-right">
            <li class="nav-item">
              <%= link_to "ログイン" , new_user_session_path ,class: "nav-link"%>
            </li>
            <li class="nav-item">
              <%= link_to "サインアップ" , new_user_registration_path,class: "nav-link" %>
            </li>
          </ul>
      <% end %>
      </div>
    </div>
  </nav>
</div>
<div class="container">
<%= yield %>
<%= debug(params) if Rails.env.development? %>
</div>
  </body>
</html>
